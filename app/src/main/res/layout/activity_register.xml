<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#E36D48">




    <EditText
        android:id="@+id/etRName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Name (Min. 3 characters)"
        android:inputType="text"
        android:drawableStart="@drawable/ic_baseline_account_box_24"
        android:drawablePadding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        />

    <EditText
        android:id="@+id/etREmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/etRName"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>


    <EditText
        android:id="@+id/etRMobile"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/etREmail"
        android:hint="Mobile Number (10 digits)"
        android:inputType="phone"
        android:maxLength="10"
        android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
        android:drawablePadding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etRAddress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/etRMobile"
        android:hint="Delivery Address"
        android:inputType="text"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etRPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/etRAddress"
        android:hint="Password (Min. 4 characters)"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/etRPassword2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/etRPassword"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/custom_input"
        android:textColor="@color/black"
        android:textColorHint="#808080"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etRPassword2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="register"
        android:textSize="16sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:backgroundTint="#DC286CA3"/>

    <TextView
        android:id="@+id/txtSign1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account | Sign in "
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textSize="15dp"
        android:textColor="@drawable/custom_textview"
        android:clickable="true"/>
</RelativeLayout>